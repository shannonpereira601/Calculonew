<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.frostox.calculo.activities.McqActivity"
    tools:showIn="@layout/activity_mcq">


    <RelativeLayout
        android:id="@+id/prntrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/questionnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:text="Q1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"

            />

        <RelativeLayout
            android:id="@+id/rlquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/questionnumber"
            android:background="@color/color_white"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="@color/color_white"
                android:minHeight="100dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:padding="9dp"
                android:text="Sample Question"
                android:textColor="@color/button"
                android:textSize="18sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/optiontext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/answer"
            android:layout_marginBottom="120dp"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/choosea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/imga"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:background="@color/color_white"
                        android:scaleType="fitCenter"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/ansa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:text="something"
                        android:textColor="@color/button"
                        android:textSize="18sp"
                        android:visibility="invisible"
                      />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/chooseb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:elevation="2dp">

                    <ImageView
                        android:id="@+id/imgb"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:background="@color/color_white"
                        android:scaleType="fitCenter"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/ansb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:text="something"
                        android:textColor="@color/button"
                        android:textSize="18sp"
                        android:visibility="invisible" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/choosec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/color_white"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/imgc"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@color/color_white"
                            android:scaleType="fitCenter"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/ansc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@color/color_white"
                            android:gravity="center"
                            android:text="something"
                            android:textColor="@color/button"
                            android:textSize="18sp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/choosed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/color_white"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/imgd"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@color/color_white"
                            android:scaleType="fitCenter"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/ansd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@color/color_white"
                            android:gravity="center"
                            android:text="something"
                            android:textColor="@color/button"
                            android:textSize="18sp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlquestion"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Click on the right answer"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />


        <View
            android:id="@+id/dummy"
            android:layout_width="0dp"
            android:layout_height="0dp"></View>
    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:visibility="invisible"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="0dp">


        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Your Score is "
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/score"
            android:background="@color/color_white"></View>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_view"
        android:visibility="invisible">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
